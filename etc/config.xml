<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <web_extend>
            <recommended_product_pages>
                <recommended_home_page>HOME_||simple-tmpl</recommended_home_page>
                <recommended_category_page>PERSONAL||personal-template</recommended_category_page>
                <recommended_product_page>RELATED||related-template</recommended_product_page>
                <recommended_cart_page>ALSO_BOUGHT||alsobought-template</recommended_cart_page>
                <recommended_order_thankyou_page>PERSONAL||personal-template</recommended_order_thankyou_page>
                <recommended_nosearch_result_page>SEARCH||search-template</recommended_nosearch_result_page>
            </recommended_product_pages>
            <javascript_tracking>
                <testmode>0</testmode>
                <identityregistered>email_address</identityregistered>
                <uniqueidentifier>sku</uniqueidentifier>
                <use_base_currency>0</use_base_currency>
                <tax_included>0</tax_included>
            </javascript_tracking>
        </web_extend>
    </default>
</config>
